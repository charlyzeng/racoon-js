  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Test",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
      "args": [
        "-r",
        "@babel/register",
        "-g",
        "string unparsable",
        "test/**/*.test.js"
      ]
    }
  ]
}